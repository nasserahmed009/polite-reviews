{
  "manifest_version": 3,
  "name": "Polite GitHub Review Comments",
  "version": "0.1.0",
  "description": "Rewrite GitHub PR review comments into a friendly, professional tone using AI.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "src/content/injector.js",
        "src/content/messaging.js",
        "src/content/content.js"
      ],
      "css": [
        "src/content/styles.css"
      ],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "src/options/options.html"
  },
  "action": {
    "default_title": "Polite Reviews options",
    "default_popup": "src/options/options.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  }
}